@page
@model QuanLyBanHang.Pages.DangNhapModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="login-wrapper">
    <h2>Đăng nhập</h2>

    <form method="post">
        <div class="login-form">
            <input asp-for="Input.Email" class="input-field" placeholder="Email" type="email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <input asp-for="Input.Password" class="input-field" placeholder="Mật khẩu" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="forgot-pass">
                <a asp-page="/QuenMatKhau" class="link-text">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn-primary">Đăng nhập</button>

            <p class="signup-prompt">
                Chưa có tài khoản?
                <a asp-page="/DangKy" class="link-text">Đăng ký ngay</a>
            </p>
        </div>
    </form>
    <link href="~/css/dangnhap.css" rel="stylesheet" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}